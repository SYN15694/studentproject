<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog title="Confirm save" initialFocus="CloseButton">
        <content>
            <Text text="Do you want to save?" class="sapUiSmallMargin"/>
        </content>
        <buttons>
            <Button
                id="SaveButton"
                text="Save"
                press="onSave"
                type="Emphasized"
            />
            <Button
                id="CloseButton"
                text="Close"
                press="onCloseDialog"
                type="Emphasized"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
