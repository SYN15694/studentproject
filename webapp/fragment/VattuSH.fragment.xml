<core:FragmentDefinition
    xmlns:table="sap.ui.mdc.table"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="searchHelpDialog"
        title="Search Help"
    >
        <Input
            id="searchField"
            liveChange=".onSearchHelpLiveChange"
            placeholder="Search..."
        />
        <!-- Add a Table or List here for the search results -->
        <List
            items="{/results}"
            selectionChange=".onListItemPress"
            mode="SingleSelectMaster" 
            id="searchResultsList"
        >
            <!-- Bind this to your search results -->
            <items>
                <StandardListItem
                    id="StandardListItem"
                    title="{Zmaphieu}"
                    description="{Zvattuxuat}"
                />
            </items>
        </List>
        <beginButton>
            <Button
                text="Confirm"
                press=".onSearchHelpConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onSearchHelpCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
